<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.kiosk.ReportSeatController">

   <children>
      <Label layoutX="600.0" layoutY="50.0" style="-fx-font-size: 30;" text="신고할 좌석 선택" />
      
      <GridPane layoutX="100.0" layoutY="150.0" hgap="10" vgap="10">
          <Button text="1" prefWidth="60" prefHeight="60" onAction="#handleSeatClick" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <Button text="2" prefWidth="60" prefHeight="60" onAction="#handleSeatClick" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
          <Button text="3" prefWidth="60" prefHeight="60" onAction="#handleSeatClick" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
          </GridPane>

      <Button layoutX="50.0" layoutY="50.0" text="뒤로가기" onAction="#handleBackAction" />
   </children>
</AnchorPane>