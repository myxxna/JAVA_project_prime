<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.HPos?>
<?import javafx.scene.layout.HBox?>

<!--
    [수정]
    - prefWidth/Height를 1920x1080으로 통일
    - 배경색을 LoginView와 동일하게 #FFFFFF (흰색)으로 변경
    - Controller를 SignupController로 지정
-->
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.kiosk.SignupController"
           prefWidth="1920" prefHeight="1080"
           style="-fx-background-color: #FFFFFF;">

    <!--
        [수정]
        - VBox 스타일(배경 #F8F8FC, 폰트, 그림자)을 LoginView와 동일하게 적용
        - 너비(maxWidth)는 900으로 동일하게, 높이(maxHeight)는 필드가 많아 750으로 조정
        - 간격(spacing)을 30으로 약간 줄여 4개 필드가 다 보이도록 함
    -->
    <VBox StackPane.alignment="CENTER"
          alignment="CENTER" spacing="30"
          maxWidth="900" maxHeight="750"
          style="-fx-background-color: #F8F8FC;
                 -fx-background-radius: 15px;
                 -fx-border-radius: 15px;
                 -fx-border-color: #EAEAEA;
                 -fx-border-width: 1px;
                 -fx-font-family: 'Inter';
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 25, 0, 0, 8);
                 -fx-padding: 40px;">

        <!-- '회원가입' 텍스트 48px, bold (LoginView와 동일) -->
        <Label text="회원가입"
               style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #222222;" />
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>

        <!--
            [수정]
            - GridPane 레이아웃을 LoginView와 동일하게 (hgap/vgap, columnConstraints)
            - 4개의 입력 필드를 모두 추가
        -->
        <GridPane hgap="25" vgap="25" alignment="CENTER">
            <VBox.margin>
                <Insets right="70.0" /> </VBox.margin>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="150" maxWidth="250"/> <!-- 라벨 너비 200으로 증가 -->
                <ColumnConstraints prefWidth="400" hgrow="NEVER"/>
            </columnConstraints>
            
            <!-- 0행: 이름 -->
            <Label text="이름"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 36px; -fx-text-fill: #444444;" />
            <TextField fx:id="nameField"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="이름을 입력하세요"
                       style="-fx-pref-width: 400px; -fx-pref-height: 55px; -fx-font-size: 18px;
                              -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                              -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                              -fx-padding: 0 15px;" />
            
            <!-- 1행: 학번 -->
            <Label text="학번"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 36px; -fx-text-fill: #444444;" />
            <TextField fx:id="studentIdField"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       promptText="학번을 입력하세요"
                       style="-fx-pref-width: 400px; -fx-pref-height: 55px; -fx-font-size: 18px;
                              -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                              -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                              -fx-padding: 0 15px;" />
            
            <!-- 2행: 비밀번호 -->
            <Label text="비밀번호"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-size: 36px; -fx-text-fill: #444444;" />
            <PasswordField fx:id="passwordField"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"
                           promptText="비밀번호를 입력하세요"
                           style="-fx-pref-width: 400px; -fx-pref-height: 55px; -fx-font-size: 18px;
                                  -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                                  -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                                  -fx-padding: 0 15px;" />

            <!-- 3행: 비밀번호 확인 -->
            <Label text="비밀번호 확인"
                   GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-size: 36px; -fx-text-fill: #444444;" />
            <PasswordField fx:id="confirmPasswordField"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"
                           promptText="비밀번호를 다시 입력하세요"
                           style="-fx-pref-width: 400px; -fx-pref-height: 55px; -fx-font-size: 18px;
                                  -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                                  -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                                  -fx-padding: 0 15px;" />
        </GridPane>

        <!--
            [수정]
            - HBox와 버튼 스타일을 LoginView 테마에 맞게 수정
            - 버튼 크기, 폰트 크기 상향 조정
        -->
        <HBox alignment="CENTER" spacing="10">
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
            
            <Button fx:id="signupButton" onAction="#handleSignupButtonAction" text="회원가입" defaultButton="true"
                    style="-fx-background-color: #3366FF; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 20px;
                           -fx-pref-width: 195px; -fx-pref-height: 55px;
                           -fx-background-radius: 10px; -fx-cursor: hand;"
                    onMouseEntered="#handleSignupEnter" 
                    onMouseExited="#handleSignupExit"/>
                           
            <Button fx:id="backButton" onAction="#handleBackButtonAction" text="취소" cancelButton="true"
                    style="-fx-background-color: #ADB5BD; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 20px;
                           -fx-pref-width: 195px; -fx-pref-height: 55px;
                           -fx-background-radius: 10px; -fx-cursor: hand;"
                    onMouseEntered="#handleCancelEnter"
                    onMouseExited="#handleCancelExit"/>
        </HBox>

    </VBox>
</StackPane>