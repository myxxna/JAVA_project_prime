<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.kiosk.SignupController"
           prefWidth="900" prefHeight="650">

    <ImageView fitWidth="1200" fitHeight="750" preserveRatio="false">
        <image>
            <Image url="https://search.pstatic.net/common/?src=https%3A%2F%2Fldb-phinf.pstatic.net%2F20241120_43%2F1732066328968qQdxe_JPEG%2F1._%25B5%25BF%25C0%25C7%25B4%25EB%25C7%25D0%25B1%25B3_%25C0%25FC%25B0%25E6_%25BB%25F6%25BC%25F6%25C1%25A4_%25BF%25EB%25B7%25AE_%25C1%25B6%25C0%25FD.jpg" />
        </image>
    </ImageView>

    <VBox StackPane.alignment="CENTER"
          alignment="CENTER" spacing="20"
          style="-fx-background-color: rgba(255,255,255,0.92);
                 -fx-border-color: rgba(0,0,0,0.85);
                 -fx-border-width: 1.2;
                 -fx-border-radius: 12px;
                 -fx-background-radius: 12px;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.22), 18, 0, 0, 6);
                 -fx-padding: 36px 48px;"
          maxWidth="520" maxHeight="550" minWidth="450" minHeight="450">


        <Label text="회원가입"
               style="-fx-font-weight: bold; -fx-font-size: 28px; -fx-text-fill: #000000;" />

        <GridPane hgap="18" vgap="16" alignment="CENTER">
            <Label text="이름"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <TextField fx:id="nameField"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="이름을 입력하세요"
                       style="-fx-pref-width: 300px; -fx-pref-height: 42px; -fx-font-size: 15px;
                              -fx-background-color: #F1F3F5; -fx-background-radius: 8px;" />
                              
            <Label text="학번"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <TextField fx:id="studentIdField"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"
                       promptText="학번을 입력하세요 (예: 20250001)"
                       style="-fx-pref-width: 300px; -fx-pref-height: 42px; -fx-font-size: 15px;
                              -fx-background-color: #F1F3F5; -fx-background-radius: 8px;" />
                              
            <Label text="비밀번호"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"
                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <PasswordField fx:id="passwordField"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"
                           promptText="비밀번호 (4자리 이상)"
                           style="-fx-pref-width: 300px; -fx-pref-height: 42px; -fx-font-size: 15px;
                                  -fx-background-color: #F1F3F5; -fx-background-radius: 8px;" />

            <Label text="비밀번호 확인"
                   GridPane.columnIndex="0" GridPane.rowIndex="3"
                   style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <PasswordField fx:id="confirmPasswordField"
                           GridPane.columnIndex="1" GridPane.rowIndex="3"
                           promptText="비밀번호를 다시 입력하세요"
                           style="-fx-pref-width: 300px; -fx-pref-height: 42px; -fx-font-size: 15px;
                                  -fx-background-color: #F1F3F5; -fx-background-radius: 8px;" />
        </GridPane>

        <HBox alignment="CENTER" spacing="15"><VBox.margin>
                <Insets top="10" right="0" bottom="0" left="0" />
            </VBox.margin> <Button fx:id="signupButton" onAction="#handleSignupButtonAction" text="회원가입" defaultButton="true"
                    style="-fx-background-color: #4C6EF5; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 16px;
                           -fx-pref-width: 150px; -fx-pref-height: 44px;
                           -fx-background-radius: 8px; -fx-cursor: hand;
                           -fx-border-color: #3C5ADB; -fx-border-width: 1px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                    onMouseEntered="#handleSignupEnter" 
                    onMouseExited="#handleSignupExit"/>
                           
            <Button fx:id="backButton" onAction="#handleBackButtonAction" text="취소" cancelButton="true"
                    style="-fx-background-color: #ADB5BD; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-font-size: 16px;
                           -fx-pref-width: 150px; -fx-pref-height: 44px;
                           -fx-background-radius: 8px; -fx-cursor: hand;
                           -fx-border-color: #92979E; -fx-border-width: 1px;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                    onMouseEntered="#handleCancelEnter"
                    onMouseExited="#handleCancelExit"/>
        </HBox>

    </VBox>
</StackPane>