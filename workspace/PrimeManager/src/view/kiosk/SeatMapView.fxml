<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.kiosk.SeatController"
      spacing="10" alignment="CENTER" prefWidth="500" prefHeight="400">

    <TableView fx:id="seatTableView" prefWidth="480" prefHeight="350">
        <columns>
            <TableColumn fx:id="seatIdCol" text="ID" prefWidth="50"/>
            <TableColumn fx:id="roomCol" text="Room" prefWidth="120"/>
            <TableColumn fx:id="seatCol" text="Seat" prefWidth="80"/>
            <TableColumn fx:id="availCol" text="Available" prefWidth="80"/>
        </columns>
    </TableView>

</VBox>

