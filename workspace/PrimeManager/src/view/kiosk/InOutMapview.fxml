<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import controller.kiosk.SeatController?>

<AnchorPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.kiosk.SeatController"
            
            style="-fx-border-color: #607d8b; -fx-border-width: 2px; -fx-padding: 15;">

    <VBox layoutX="15.0" layoutY="15.0" spacing="10" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        
        <HBox spacing="20">
            <Label text="선택 좌석:"/>
            <Text fx:id="selectedSeatNumber" text="선택 전" style="-fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="남은 시간:"/>
            <Text fx:id="remainingTimeText" text="00:00:00" style="-fx-font-size: 18px; -fx-fill: #e57373; -fx-font-weight: bold;"/>
        </HBox>

        <Separator/>

        <GridPane fx:id="seatGrid" alignment="CENTER" hgap="10" vgap="10" VBox.vgrow="ALWAYS">
            </GridPane>

        <Separator/>
        
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="reserveButton" text="좌석 예약" onAction="#handleReservation" style="-fx-background-color: #ffb74d; -fx-text-fill: white; -fx-min-width: 120;"/>
            <Button fx:id="checkInButton" text="입실하기" onAction="#handleCheckIn" disable="true" style="-fx-background-color: #81c784; -fx-text-fill: white; -fx-min-width: 100;"/>
            <Button fx:id="extendButton" text="30분 연장" onAction="#handleExtension" disable="true" style="-fx-background-color: #4db6ac; -fx-text-fill: white; -fx-min-width: 100;"/>
            <Button fx:id="extend60Button" text="60분 연장" onAction="#handleExtension60" disable="true" style="-fx-background-color: #4db6ac; -fx-text-fill: white; -fx-min-width: 100;"/>
            <Button fx:id="checkOutButton" text="퇴실하기" onAction="#handleCheckOut" disable="true" style="-fx-background-color: #e57373; -fx-text-fill: white; -fx-min-width: 100;"/>
        </HBox>
        
        <Separator/>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="범례:" style="-fx-font-weight: bold;"/>
            <Label text="사용 중" style="-fx-text-fill: #e57373; -fx-font-weight: bold;"/>
            <Label text="예약 대기" style="-fx-text-fill: #ffb74d; -fx-font-weight: bold;"/>
            <Label text="사용 가능" style="-fx-text-fill: #81c784; -fx-font-weight: bold;"/>
        </HBox>
        
    </VBox>
</AnchorPane>