<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.kiosk.MainMenuController"
           prefWidth="1400" prefHeight="800"
           style="-fx-background-color: #FFFFFF;">

    <VBox StackPane.alignment="CENTER"
          alignment="CENTER" spacing="25"
          maxWidth="700" maxHeight="400"
          style="-fx-background-color: #F8F8FC;
                 -fx-background-radius: 15px;
                 -fx-border-radius: 15px;
                 -fx-border-color: #EAEAEA;
                 -fx-border-width: 1px;
                 -fx-font-family: 'Inter';
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 25, 0, 0, 8);
                 -fx-padding: 40px;">

        <Button fx:id="checkInButton" onAction="#handleCheckInButtonAction" text="입실/퇴실하기 >"
                style="-fx-background-color: #3366FF; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-font-size: 24px;
                       -fx-pref-width: 350px; -fx-pref-height: 60px;
                       -fx-background-radius: 10px; -fx-cursor: hand;" />

        <Button fx:id="reserveButton" onAction="#handleReserveButtonAction" text="예약하기 >"
                style="-fx-background-color: #3366FF; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-font-size: 24px;
                       -fx-pref-width: 350px; -fx-pref-height: 60px;
                       -fx-background-radius: 10px; -fx-cursor: hand;" />
                       
        <Button fx:id="extendButton" onAction="#handleExtendButtonAction" text="연장하기 >"
                style="-fx-background-color: #3366FF; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-font-size: 24px;
                       -fx-pref-width: 350px; -fx-pref-height: 60px;
                       -fx-background-radius: 10px; -fx-cursor: hand;" />

        <VBox.margin>
            <Insets top="30" />
        </VBox.margin>
        <Button fx:id="logoutButton" onAction="#handleLogoutButtonAction" text="로그아웃"
                style="-fx-background-color: #E9ECEF; -fx-text-fill: #495057;
                       -fx-font-weight: bold; -fx-font-size: 16px;
                       -fx-pref-width: 150px; -fx-pref-height: 45px;
                       -fx-background-radius: 10px; -fx-cursor: hand;" />

    </VBox>
</StackPane>