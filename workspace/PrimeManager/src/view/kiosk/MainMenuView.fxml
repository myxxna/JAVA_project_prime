<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.kiosk.MainMenuController"
           prefWidth="1400" prefHeight="800"
           style="-fx-background-color: #FFFFFF;">

    <VBox StackPane.alignment="CENTER"
          alignment="TOP_CENTER" 
          spacing="15"
          maxWidth="700"
          maxHeight="400"
          style="-fx-background-color: #F0F2F8;
                 -fx-background-radius: 20px;
                 -fx-border-radius: 20px;
                 -fx-border-color: #4A5B8F;
                 -fx-border-width: 2px;
                 -fx-padding: 40px 40px 30px 40px;">
                 
        <Button fx:id="checkInButton" 
                onAction="#handleCheckInButtonAction" 
                text="입실하기"
                style="-fx-background-color: #3366FF; 
                       -fx-text-fill: white;
                       -fx-font-weight: bold; 
                       -fx-font-size: 22px;
                       -fx-pref-width: 400px; 
                       -fx-pref-height: 55px;
                       -fx-background-radius: 10px; 
                       -fx-cursor: hand;" />

        <Button fx:id="reserveButton" 
                onAction="#handleReserveButtonAction" 
                text="예약하기"
                style="-fx-background-color: #3366FF; 
                       -fx-text-fill: white;
                       -fx-font-weight: bold; 
                       -fx-font-size: 22px;
                       -fx-pref-width: 400px; 
                       -fx-pref-height: 55px;
                       -fx-background-radius: 10px; 
                       -fx-cursor: hand;" />
                       
        <Button fx:id="extendButton" 
                onAction="#handleExtendButtonAction" 
                text="연장하기/퇴실하기"
                style="-fx-background-color: #3366FF; 
                       -fx-text-fill: white;
                       -fx-font-weight: bold; 
                       -fx-font-size: 22px;
                       -fx-pref-width: 400px; 
                       -fx-pref-height: 55px;
                       -fx-background-radius: 10px; 
                       -fx-cursor: hand;" />
        
        <Button fx:id="logoutButton" 
                onAction="#handleLogoutButtonAction" 
                text="로그아웃 >"
                style="-fx-background-color: #E0E3EB; 
                       -fx-text-fill: #5A6B8F;
                       -fx-font-weight: bold; 
                       -fx-font-size: 14px;
                       -fx-pref-width: 120px; 
                       -fx-pref-height: 35px;
                       -fx-background-radius: 20px; 
                       -fx-cursor: hand;">
            <VBox.margin>
                <Insets top="5" bottom="10" />
            </VBox.margin>
        </Button>

        <Region VBox.vgrow="ALWAYS" />

        <VBox alignment="CENTER" spacing="8">
            <Label text="사용에 불편함이 있나요?" 
                   style="-fx-font-size: 16px; 
                          -fx-text-fill: #333333;
                          -fx-font-weight: normal;" />

            <Button fx:id="reportButton" 
                    onAction="#handleReportButtonAction" 
                    text="신고하기"
                    style="-fx-background-color: #FF5722; 
                           -fx-text-fill: white;
                           -fx-font-weight: bold; 
                           -fx-font-size: 18px;
                           -fx-pref-width: 200px; 
                           -fx-pref-height: 50px;
                           -fx-background-radius: 10px; 
                           -fx-cursor: hand;" />
        </VBox>
        
    </VBox>
    
</StackPane>