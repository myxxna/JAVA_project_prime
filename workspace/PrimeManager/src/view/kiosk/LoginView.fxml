<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.geometry.HPos?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.kiosk.LoginController"
           prefWidth="1400" prefHeight="800"
           style="-fx-background-color: #FFFFFF;">

    <VBox StackPane.alignment="CENTER"
          alignment="CENTER" spacing="40"
          maxWidth="700" maxHeight="400"
          style="-fx-background-color: #F8F8FC;
                 -fx-background-radius: 15px;
                 -fx-border-radius: 15px;
                 -fx-border-color: #EAEAEA;
                 -fx-border-width: 1px;
                 -fx-font-family: 'Inter';
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 25, 0, 0, 8);
                 -fx-padding: 40px;">

        <Label text="로그인"
               style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #222222;" />
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>

        <GridPane hgap="25" vgap="25" alignment="CENTER">
            
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                <ColumnConstraints prefWidth="260"/>
            </columnConstraints>
            
            <Label text="학번"
                   GridPane.columnIndex="0" GridPane.rowIndex="0"
                   style="-fx-font-size: 24px; -fx-text-fill: #444444;" />
            
            <TextField fx:id="studentIdField"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"
                       promptText="학번을 입력하세요"
                       style="-fx-pref-width: 300px; -fx-pref-height: 45px; -fx-font-size: 18px; -fx-min-height: 45px;
                              -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                              -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                              -fx-padding: 0 15px;" />
            
            <Label text="비밀번호"
                   GridPane.columnIndex="0" GridPane.rowIndex="1"
                   style="-fx-font-size: 24px; -fx-text-fill: #444444;" />
            
            <PasswordField fx:id="passwordField"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"
                           promptText="비밀번호를 입력하세요"
                           style="-fx-pref-width: 300px; -fx-pref-height: 45px; -fx-font-size: 18px; -fx-min-height: 45px;
                                  -fx-background-color: #F3F4F6; -fx-background-radius: 10px;
                                  -fx-border-color: #D1D5DB; -fx-border-radius: 10px; -fx-border-width: 1.5px;
                                  -fx-padding: 0 15px;" />
        </GridPane>

        <VBox.margin>
            <Insets top="20" /> </VBox.margin>
        
        <Button fx:id="loginButton" onAction="#handleLoginButtonAction" text="완료" defaultButton="true"
                style="-fx-background-color: #3366FF; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-font-size: 20px;
                       -fx-pref-width: 400px; -fx-pref-height: 40px; -fx-min-height: 40px;
                       -fx-background-radius: 10px; -fx-cursor: hand;" />
       
        <VBox.margin>
            <Insets top="15" /> </VBox.margin>
        
        <Button fx:id="signupLinkButton" onAction="#handleSignupLinkAction" text="회원가입"
                    style="-fx-background-color: transparent; -fx-text-fill: #888888; -fx-font-size: 16px; -fx-cursor: hand; -fx-underline: false;"
                    onMouseEntered="#handleSignupLinkEnter"
                    onMouseExited="#handleSignupLinkExit"/>

    </VBox>
</StackPane>